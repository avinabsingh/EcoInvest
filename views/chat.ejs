<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EcoInvest AI Assistant</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: "Segoe UI", Arial, sans-serif;
            background: linear-gradient(135deg, #e0f7fa, #f1f8e9);
            min-height: 100vh;
        }

        /* ================= NAVBAR (SAME AS SITE) ================= */
        .navbar {
            background: linear-gradient(135deg, rgba(46, 125, 50, 0.95), rgba(39, 107, 43, 0.95));
            padding: 0 40px;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 80px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.15);
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            color: white;
            font-size: 1.5rem;
            font-weight: 700;
            text-decoration: none;
        }

        .navbar-brand i {
            margin-right: 10px;
            font-size: 1.8rem;
        }

        .navbar-nav {
            display: flex;
            list-style: none;
        }

        .nav-item {
            margin-left: 20px;
        }

        .nav-link {
            color: white;
            text-decoration: none;
            font-weight: 600;
            padding: 10px 15px;
            border-radius: 30px;
            transition: 0.3s;
        }

        .nav-link:hover,
        .nav-link.active {
            background: rgba(255,255,255,0.2);
        }

        /* ================= CHAT LAYOUT ================= */
        .chat-page {
            margin-top: 100px;
            display: flex;
            justify-content: center;
            padding: 30px;
        }

        .chat-container {
            width: 100%;
            max-width: 1100px;   /* ðŸ”¥ INCREASED WIDTH */
            height: 600px;       /* ðŸ”¥ INCREASED HEIGHT */
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .chat-header {
            background: #2e7d32;
            color: #ffffff;
            padding: 18px;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
        }

        #chat {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            background: #f7fdf9;
        }

        .msg {
            margin-bottom: 15px;
            max-width: 70%;
            padding: 12px 16px;
            border-radius: 15px;
            font-size: 15px;
            line-height: 1.5;
        }

        .user {
            background: #e3f2fd;
            color: #0d47a1;
            margin-left: auto;
            border-bottom-right-radius: 0;
        }

        .bot {
            background: #e8f5e9;
            color: #1b5e20;
            margin-right: auto;
            border-bottom-left-radius: 0;
        }

        .chat-footer {
            display: flex;
            border-top: 1px solid #ddd;
        }

        .chat-footer input {
            flex: 1;
            padding: 16px;
            border: none;
            font-size: 15px;
            outline: none;
        }

        .chat-footer button {
            background: #2e7d32;
            color: white;
            border: none;
            padding: 0 30px;
            font-size: 15px;
            cursor: pointer;
        }

        .chat-footer button:hover {
            background: #1b5e20;
        }

        /* ================= MOBILE ================= */
        @media (max-width: 768px) {
            .chat-container {
                height: 85vh;
            }

            .navbar {
                flex-direction: column;
                height: auto;
                padding: 15px;
            }

            .navbar-nav {
                margin-top: 10px;
            }
        }
    </style>
</head>
<body>

<!-- NAVBAR -->
<nav class="navbar">
    <a href="/" class="navbar-brand">
        <i class="fas fa-leaf"></i> EcoInvest
    </a>
    <ul class="navbar-nav">
        <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
        <li class="nav-item"><a href="/compare-investments" class="nav-link">Compare</a></li>
        <li class="nav-item"><a href="/chatbot" class="nav-link active">AI Assistant</a></li>
        <li class="nav-item"><a href="/logout" class="nav-link">Logout</a></li>
    </ul>
</nav>

<!-- CHAT -->
<div class="chat-page">
    <div class="chat-container">
        <div class="chat-header">ðŸŒ± EcoInvest AI Assistant</div>

        <div id="chat"></div>

        <form class="chat-footer" id="chatForm">
            <input type="text" id="message" placeholder="Ask about ESG scores, eco investments, products..." required />
            <button type="submit">Send</button>
        </form>
    </div>
</div>

<script>
document.getElementById("chatForm").addEventListener("submit", async function(e) {
    e.preventDefault();

    const msg = document.getElementById("message").value;
    const chat = document.getElementById("chat");

    chat.innerHTML += `<div class="msg user"><b>You:</b> ${msg}</div>`;
    chat.scrollTop = chat.scrollHeight;
    document.getElementById("message").value = "";

    const res = await fetch("/chatbot", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ message: msg })
    });

    const data = await res.json();
    chat.innerHTML += `<div class="msg bot"><b>Bot:</b> ${data.reply}</div>`;
    chat.scrollTop = chat.scrollHeight;
});
</script>

</body>
</html>
