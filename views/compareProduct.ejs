        }

        .footer-links a i {
            margin-right: 8px;
            font-size: 0.8rem;
        }

        .footer-newsletter {
            flex: 1;
            min-width: 300px;
            margin-bottom: 30px;
        }

        .footer-newsletter h3 {
            font-size: 1.3rem;
            margin-bottom: 20px;
            position: relative;
