        .product-name-lg {
            font-size: 1.3rem;
            font-weight: 700;
            margin-bottom: 5px;
            text-align: center;
        }

        .product-category-lg {
            font-size: 1rem;
            color: #4CAF50;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .vs-circle {
            width: 60px;
            height: 60px;
            background: #4CAF50;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            font-weight: bold;
            margin: 0 20px;
        }

        .metrics-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            margin-top: 30px;
        }

        .metric-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
        }

        .metric-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .metric-title {
            font-size: 1.1rem;
            font-weight: 700;
            color: #4CAF50;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
        }

        .metric-title i {
            margin-right: 10px;
            font-size: 1.3rem;
        }

        .metric-values {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
        }

        .metric-value {
            font-size: 1.2rem;
            font-weight: 700;
            text-align: center;
            flex: 1;
        }

        .metric-bar-container {
            height: 10px;
            background: #e0e0e0;
            border-radius: 5px;
            margin: 15px 0;
            overflow: hidden;
        }

        .metric-bar {
            height: 100%;
            border-radius: 5px;
            background: linear-gradient(90deg, #81C784, #4CAF50);
            width: 50%;
        }

        .winner {
            color: #4CAF50;
            font-weight: 700;
            text-align: center;
            margin-top: 10px;
            font-size: 1.1rem;
        }

        .overall-score {
            grid-column: 1 / -1;
            background: linear-gradient(135deg, #E8F5E9, #C8E6C9);
            padding: 30px;
            border-radius: 15px;
            text-align: center;
        }

        .score-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #4CAF50;
            margin-bottom: 20px;
        }

        .score-value {
            font-size: 3rem;
            font-weight: 900;
            color: #2E7D32;
            margin: 20px 0;
        }

        .score-difference {
            font-size: 1.2rem;
            color: #666;
        }

        .score-difference.higher {
            color: #4CAF50;
        }

        .score-difference.lower {
            color: #F44336;
        }

        .co2-tag {
            background: #FF9800;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: bold;
            display: inline-block;
            margin-top: 5px;
        }

        /* Loading Spinner */
        .loading-spinner {
            display: none;
            text-align: center;
            margin: 20px 0;
        }

        .spinner {
            width: 40px;
            height: 40px;
            border: 4px solid rgba(76, 175, 80, 0.2);
            border-radius: 50%;
            border-top-color: #4CAF50;
            animation: spin 1s ease-in-out infinite;
            margin: 0 auto;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Detailed Comparison Section */
        .detailed-comparison {
            margin-top: 40px;
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .detailed-comparison h2 {
            color: #4CAF50;
            margin-bottom: 20px;
            font-size: 1.5rem;
            position: relative;
            padding-bottom: 10px;
        }

        .detailed-comparison h2::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 2px;
            background: #4CAF50;
        }

        .specs-grid {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 20px;
            margin-top: 20px;
        }

        .spec-item {
            margin-bottom: 15px;
        }

        .spec-title {
            font-weight: 600;
            margin-bottom: 5px;
            color: #2E7D32;
        }

        .spec-values {
            display: flex;
            justify-content: space-between;
        }

        .spec-value {
            flex: 1;
            text-align: center;
            padding: 8px;
            border-radius: 5px;
            background: #F5F5F5;
        }

        .spec-value.better {
            background: #E8F5E9;
            font-weight: 600;
        }

        /* Graphs Section */
        .graphs-section {
            margin-top: 40px;
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .graphs-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
            gap: 30px;
            margin-top: 30px;
        }

        .graph-card {
            background: #f9f9f9;
            border-radius: 10px;
            padding: 20px;
            height: 400px;
        }

        .graph-title {
            font-size: 1.2rem;
            color: #4CAF50;
            margin-bottom: 20px;
            text-align: center;
        }

        .chart-container {
            position: relative;
            height: calc(100% - 40px);
            width: 100%;
        }

        /* Footer Styles */
        .footer {
            background: linear-gradient(135deg, rgba(46, 125, 50, 0.95), rgba(27, 94, 32, 0.95));
            color: white;
            padding: 60px 0 30px;
            position: relative;
            overflow: hidden;
        }

        .leaf-decoration {
            position: absolute;
            font-size: 3rem;
            opacity: 0.1;
            z-index: 0;
        }

        .leaf-1 {
            top: 20px;
            left: 5%;
            transform: rotate(30deg);
        }

        .leaf-2 {
            bottom: 40px;
            right: 10%;
            transform: rotate(-20deg);
        }

        .leaf-3 {
            top: 50%;
            left: 7%;
            transform: rotate(45deg);
        }

        .footer-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            position: relative;
            z-index: 1;
        }

        .footer-about {
            flex: 1;
            min-width: 300px;
            margin-bottom: 30px;
            padding-right: 20px;
        }

        .footer-logo {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            font-size: 1.8rem;
        }

        .footer-logo i {
            margin-right: 10px;
        }

        .footer-logo-text {
            font-weight: 700;
        }

        .footer-about p {
            margin-bottom: 20px;
            line-height: 1.6;
        }

        .footer-social {
            display: flex;
            gap: 15px;
        }

        .footer-social a {
            color: white;
            background: rgba(255, 255, 255, 0.1);
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

        .footer-social a:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-3px);
        }

        .footer-links {
            flex: 0 0 200px;
            margin-bottom: 30px;
        }

        .footer-links h3 {
            font-size: 1.3rem;
            margin-bottom: 20px;
            position: relative;
            padding-bottom: 10px;
        }

        .footer-links h3::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 2px;
            background: #81C784;
        }

        .footer-links ul {
            list-style: none;
        }

        .footer-links li {
            margin-bottom: 10px;
        }

        .footer-links a {
            color: #e0e0e0;
            text-decoration: none;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }

        .footer-links a:hover {
            color: white;
