    <script>
        const productData = JSON.parse(document.getElementById('product-data').textContent);
    </script>

    <script>
        

        // DOM Elements
        const productAInput = document.getElementById('productAInput');
        const productBInput = document.getElementById('productBInput');
        const productAResults = document.getElementById('productAResults');
        const productBResults = document.getElementById('productBResults');
        const compareBtn = document.getElementById('compareBtn');
        const comparisonResults = document.getElementById('comparisonResults');
        const loadingSpinner = document.getElementById('loadingSpinner');
        const metricsContainer = document.getElementById('metricsContainer');
        const detailedComparison = document.getElementById('detailedComparison');
        const graphsSection = document.getElementById('graphsSection');

        // Selected products
        let selectedProductA = null;
        let selectedProductB = null;

        // Event Listeners
        productAInput.addEventListener('input', () => handleSearch(productAInput, productAResults, 'A'));
        productBInput.addEventListener('input', () => handleSearch(productBInput, productBResults, 'B'));
        compareBtn.addEventListener('click', compareProducts);

        // Handle product search
        function handleSearch(inputElement, resultsContainer, productSide) {
            const searchTerm = inputElement.value.toLowerCase();
            if (searchTerm.length < 2) {
                resultsContainer.style.display = 'none';
                return;
            }

            const filteredProducts = productData.filter(product => 
                product.name.toLowerCase().includes(searchTerm)
                || product.emission_factor.category.toLowerCase().includes(searchTerm));

            displaySearchResults(filteredProducts, resultsContainer, productSide);
        }

        // Display search results
        function displaySearchResults(products, container, productSide) {
            container.innerHTML = '';
            
            if (products.length === 0) {
                const noResults = document.createElement('div');
                noResults.className = 'search-result-item';
                noResults.textContent = 'No products found';
                container.appendChild(noResults);
            } else {
                products.forEach(product => {
                    const resultItem = document.createElement('div');
                    resultItem.className = 'search-result-item';
                    resultItem.innerHTML = `
                        <img src="${product.image}" alt="${product.name}">
                        <div class="product-info">
                            <div class="product-name">${product.name}</div>
                            <div class="product-category">${product.emission_factor.category}</div>
                        </div>
                    `;
                    resultItem.addEventListener('click', () => selectProduct(product, productSide));
                    container.appendChild(resultItem);
                });
            }
            
            container.style.display = 'block';
        }

        // Select a product
        function selectProduct(product, side) {
            if (side === 'A') {
                selectedProductA = product;
                productAInput.value = product.name;
                productAResults.style.display = 'none';
            } else {
                selectedProductB = product;
                productBInput.value = product.name;
                productBResults.style.display = 'none';
            }
            
            // Enable compare button if both products are selected
            if (selectedProductA && selectedProductB) {
                compareBtn.disabled = false;
            }
        }

        // Compare selected products
        function compareProducts() {
            // Show loading spinner
            loadingSpinner.style.display = 'block';
            comparisonResults.style.display = 'none';
            
            // Simulate API call delay
            setTimeout(() => {
                displayComparisonResults();
                loadingSpinner.style.display = 'none';
                comparisonResults.style.display = 'block';
                
                // Scroll to results
                comparisonResults.scrollIntoView({ behavior: 'smooth' });
            }, 1500);
        }

        // Display comparison results
        function displayComparisonResults() {
            // Update product headers
            document.getElementById('productAImage').src = selectedProductA.image;
            document.getElementById('productAName').textContent = selectedProductA.name;
            document.getElementById('productACategory').textContent = selectedProductA.emission_factor.category;
            document.getElementById('productACO2').textContent = `${selectedProductA.co2e} ${selectedProductA.co2e_unit} CO‚ÇÇe`;
            
            document.getElementById('productBImage').src = selectedProductB.image;
            document.getElementById('productBName').textContent = selectedProductB.name;
            document.getElementById('productBCategory').textContent = selectedProductB.emission_factor.category;
            document.getElementById('productBCO2').textContent = `${selectedProductB.co2e} ${selectedProductB.co2e_unit} CO‚ÇÇe`;
            
            // Generate metrics
            generateMetrics();
            
            // Generate detailed comparison
            generateDetailedComparison();
            
            // Generate charts
            generateCharts();
        }

        // Generate comparison metrics
        function generateMetrics() {
            metricsContainer.innerHTML = '';
            
            // CO2e Comparison
            const co2eDiff = selectedProductA.co2e - selectedProductB.co2e;
            const co2ePercentDiff = ((Math.abs(co2eDiff) / Math.max(selectedProductA.co2e, selectedProductB.co2e)) * 100);
            const co2eWinner = co2eDiff < 0 ? selectedProductA.name : selectedProductB.name;
            
            metricsContainer.appendChild(createMetricCard(
                'Carbon Footprint',
                'fas fa-smog',
                selectedProductA.co2e,
                selectedProductB.co2e,
                selectedProductA.co2e_unit,
                co2eWinner,
                co2ePercentDiff,
                co2eDiff < 0
            ));
            
            // Price Comparison (using activity data as proxy)
            const priceDiff = selectedProductA.activity_data.activity_value - selectedProductB.activity_data.activity_value;
            const pricePercentDiff = ((Math.abs(priceDiff) / Math.max(selectedProductA.activity_data.activity_value, selectedProductB.activity_data.activity_value)) * 100);
            const priceWinner = priceDiff < 0 ? selectedProductA.name : selectedProductB.name;
            
            metricsContainer.appendChild(createMetricCard(
                'Price',
                'fas fa-tag',
                selectedProductA.activity_data.activity_value,
                selectedProductB.activity_data.activity_value,
                selectedProductA.activity_data.activity_unit,
                priceWinner,
                pricePercentDiff,
                priceDiff < 0
            ));
            
            // Overall Score
            const overallScore = calculateOverallScore();
            const overallCard = document.createElement('div');
            overallCard.className = 'overall-score';
            overallCard.innerHTML = `
                <h3 class="score-title">Overall Sustainability Score</h3>
                <div class="score-value">${overallScore.score}</div>
                <p class="score-difference ${overallScore.difference > 0 ? 'higher' : 'lower'}">
                    ${overallScore.winner} is ${Math.abs(overallScore.difference)}% ${overallScore.difference > 0 ? 'better' : 'worse'}
                </p>
                <p>Based on carbon footprint and price comparison</p>
            `;
            metricsContainer.appendChild(overallCard);
        }

        // Create a metric card
        function createMetricCard(title, icon, valueA, valueB, unit, winner, percentDiff, isABetter) {
            const card = document.createElement('div');
            card.className = 'metric-card';
            
            const higherValue = Math.max(valueA, valueB);
            const barWidthA = (valueA / higherValue) * 100;
            const barWidthB = (valueB / higherValue) * 100;
            
            card.innerHTML = `
                <div class="metric-title">
                    <i class="${icon}"></i> ${title}
                </div>
                <div class="metric-values">
                    <div class="metric-value">${valueA.toFixed(2)} ${unit}</div>
                    <div class="metric-value">${valueB.toFixed(2)} ${unit}</div>
                </div>
                <div class="metric-bar-container">
                    <div class="metric-bar" style="width: ${barWidthA}%; background: ${isABetter ? '#4CAF50' : '#F44336'};"></div>
                    <div class="metric-bar" style="width: ${barWidthB}%; background: ${!isABetter ? '#4CAF50' : '#F44336'}; margin-left: ${barWidthA}%;"></div>
                </div>
                <div class="winner">
                    <i class="fas fa-trophy"></i> ${winner} is ${percentDiff.toFixed(1)}% better
                </div>
            `;
            
            return card;
        }

        // Calculate overall score
        function calculateOverallScore() {
            // Simple scoring algorithm - can be enhanced
            const co2eWeight = 0.7; // More weight to carbon footprint
            const priceWeight = 0.3;
            
            // Normalize values (lower is better for both metrics)
            const normalizedCo2eA = 1 - (selectedProductA.co2e / (selectedProductA.co2e + selectedProductB.co2e));
            const normalizedCo2eB = 1 - (selectedProductB.co2e / (selectedProductA.co2e + selectedProductB.co2e));
            
            const normalizedPriceA = 1 - (selectedProductA.activity_data.activity_value / 
                (selectedProductA.activity_data.activity_value + selectedProductB.activity_data.activity_value));
            const normalizedPriceB = 1 - (selectedProductB.activity_data.activity_value / 
                (selectedProductA.activity_data.activity_value + selectedProductB.activity_data.activity_value));
            
            // Calculate scores
            const scoreA = (normalizedCo2eA * co2eWeight + normalizedPriceA * priceWeight) * 100;
            const scoreB = (normalizedCo2eB * co2eWeight + normalizedPriceB * priceWeight) * 100;
            
            return {
                score: scoreA > scoreB ? scoreA.toFixed(1) : scoreB.toFixed(1),
                winner: scoreA > scoreB ? selectedProductA.name : selectedProductB.name,
                difference: Math.abs(scoreA - scoreB)
            };
        }

        // Generate detailed comparison
        function generateDetailedComparison() {
            detailedComparison.innerHTML = `
                <h2><i class="fas fa-info-circle"></i> Detailed Comparison</h2>
                <div class="specs-grid">
                    <div class="spec-item">
                        <div class="spec-title">Product Category</div>
                        <div class="spec-values">
                            <div class="spec-value">${selectedProductA.emission_factor.category}</div>
                            <div class="spec-value">${selectedProductB.emission_factor.category}</div>
                        </div>
                    </div>
                    <div class="spec-item">
                        <div class="spec-title">Data Source</div>
                        <div class="spec-values">
                            <div class="spec-value">${selectedProductA.emission_factor.source}</div>
                            <div class="spec-value">${selectedProductB.emission_factor.source}</div>
                        </div>
                    </div>
                    <div class="spec-item">
                        <div class="spec-title">LCA Scope</div>
                        <div class="spec-values">
                            <div class="spec-value">${formatLcaScope(selectedProductA.emission_factor.source_lca_activity)}</div>
                            <div class="spec-value">${formatLcaScope(selectedProductB.emission_factor.source_lca_activity)}</div>
                        </div>
                    </div>
                    <div class="spec-item">
                        <div class="spec-title">CO2 Emissions</div>
                        <div class="spec-values">
                            <div class="spec-value ${selectedProductA.constituent_gases.co2 < selectedProductB.constituent_gases.co2 ? 'better' : ''}">
                                ${selectedProductA.constituent_gases.co2 ? selectedProductA.constituent_gases.co2.toFixed(2) + ' kg' : 'N/A'}
                            </div>
                            <div class="spec-value ${selectedProductB.constituent_gases.co2 < selectedProductA.constituent_gases.co2 ? 'better' : ''}">
                                ${selectedProductB.constituent_gases.co2 ? selectedProductB.constituent_gases.co2.toFixed(2) + ' kg' : 'N/A'}
                            </div>
                        </div>
                    </div>
                    <div class="spec-item">
                        <div class="spec-title">Other GHGs (CO2e)</div>
                        <div class="spec-values">
                            <div class="spec-value ${selectedProductA.constituent_gases.co2e_other < selectedProductB.constituent_gases.co2e_other ? 'better' : ''}">
                                ${selectedProductA.constituent_gases.co2e_other ? selectedProductA.constituent_gases.co2e_other.toFixed(2) + ' kg' : 'N/A'}
                            </div>
                            <div class="spec-value ${selectedProductB.constituent_gases.co2e_other < selectedProductA.constituent_gases.co2e_other ? 'better' : ''}">
                                ${selectedProductB.constituent_gases.co2e_other ? selectedProductB.constituent_gases.co2e_other.toFixed(2) + ' kg' : 'N/A'}
                            </div>
                        </div>
                    </div>
                    <div class="spec-item">
                        <div class="spec-title">Price per Unit</div>
                        <div class="spec-values">
                            <div class="spec-value ${selectedProductA.activity_data.activity_value < selectedProductB.activity_data.activity_value ? 'better' : ''}">
                                ${selectedProductA.activity_data.activity_value} ${selectedProductA.activity_data.activity_unit}
                            </div>
                            <div class="spec-value ${selectedProductB.activity_data.activity_value < selectedProductA.activity_data.activity_value ? 'better' : ''}">
                                ${selectedProductB.activity_data.activity_value} ${selectedProductB.activity_data.activity_unit}
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }

        // Format LCA scope for display
        function formatLcaScope(scope) {
            const scopeMap = {
                'cradle_to_gate': 'Cradle to Gate',
                'farm_to_retail': 'Farm to Retail',
                'well_to_wheel': 'Well to Wheel',
                'cradle_to_grave': 'Cradle to Grave'
            };
            return scopeMap[scope] || scope;
        }

        // Generate charts
        function generateCharts() {
            // CO2 Comparison Chart
            const co2Ctx = document.getElementById('co2ComparisonChart').getContext('2d');
            new Chart(co2Ctx, {
                type: 'bar',
                data: {
                    labels: [selectedProductA.name, selectedProductB.name],
                    datasets: [{
                        label: 'CO2e Emissions',
                        data: [selectedProductA.co2e, selectedProductB.co2e],
                        backgroundColor: [
                            'rgba(76, 175, 80, 0.7)',
                            'rgba(244, 67, 54, 0.7)'
                        ],
                        borderColor: [
                            'rgba(76, 175, 80, 1)',
                            'rgba(244, 67, 54, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'kg CO2e'
                            }
                        }
                    },
                    plugins: {
                        title: {
                            display: true,
                            text: 'Total Carbon Footprint Comparison'
                        }
                    }
                }
            });
            
            // Gases Breakdown Chart
            const gasesCtx = document.getElementById('gasesChart').getContext('2d');
            
            // Prepare gases data
            const gasesLabels = [];
            const gasesA = [];
            const gasesB = [];
            
            // Collect all unique gases from both products
            const allGases = new Set();
            if (selectedProductA.constituent_gases) {
                Object.keys(selectedProductA.constituent_gases).forEach(gas => allGases.add(gas));
            }
            if (selectedProductB.constituent_gases) {
                Object.keys(selectedProductB.constituent_gases).forEach(gas => allGases.add(gas));
            }
            
            // Populate data arrays
            allGases.forEach(gas => {
                gasesLabels.push(gas.toUpperCase());
                gasesA.push(selectedProductA.constituent_gases[gas] || 0);
                gasesB.push(selectedProductB.constituent_gases[gas] || 0);
            });
            
            new Chart(gasesCtx, {
                type: 'radar',
                data: {
                    labels: gasesLabels,
                    datasets: [
                        {
                            label: selectedProductA.name,
                            data: gasesA,
                            backgroundColor: 'rgba(76, 175, 80, 0.2)',
                            borderColor: 'rgba(76, 175, 80, 1)',
                            borderWidth: 2,
                            pointBackgroundColor: 'rgba(76, 175, 80, 1)'
                        },
                        {
                            label: selectedProductB.name,
                            data: gasesB,
                            backgroundColor: 'rgba(244, 67, 54, 0.2)',
                            borderColor: 'rgba(244, 67, 54, 1)',
                            borderWidth: 2,
                            pointBackgroundColor: 'rgba(244, 67, 54, 1)'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Greenhouse Gas Composition'
                        }
                    },
                    scales: {
                        r: {
                            beginAtZero: true
                        }
                    }
                }
            });
            
            // Emission Factor Chart
            const emissionCtx = document.getElementById('emissionChart').getContext('2d');
            new Chart(emissionCtx, {
                type: 'doughnut',
                data: {
                    labels: ['CO2', 'Other GHGs'],
                    datasets: [
                        {
                            label: selectedProductA.name,
                            data: [
                                selectedProductA.constituent_gases.co2 || 0,
                                selectedProductA.constituent_gases.co2e_other || 0
                            ],
                            backgroundColor: [
                                'rgba(54, 162, 235, 0.7)',
                                'rgba(255, 206, 86, 0.7)'
                            ],
                            borderColor: [
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)'
                            ],
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: {
                            display: true,
                            text: `${selectedProductA.name} Emission Composition`
                        }
                    }
                }
            });
            
            // Activity Data Chart
            const activityCtx = document.getElementById('activityChart').getContext('2d');
            new Chart(activityCtx, {
                type: 'pie',
                data: {
                    labels: ['Price per Unit', 'Carbon per Unit'],
                    datasets: [{
                        data: [
                            selectedProductB.activity_data.activity_value,
                            selectedProductB.co2e
                        ],
                        backgroundColor: [
                            'rgba(153, 102, 255, 0.7)',
                            'rgba(255, 159, 64, 0.7)'
                        ],
                        borderColor: [
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: {
                            display: true,
                            text: `${selectedProductB.name} Price vs Carbon`
                        }
                    }
                }
            });
        }

        // Navbar scroll effect
        window.addEventListener('scroll', function() {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Close search results when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.search-container')) {
                productAResults.style.display = 'none';
                productBResults.style.display = 'none';
            }
        });
