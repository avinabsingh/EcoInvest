        .results-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 1px solid #e0e0e0;
        }

        .product-header {
            display: flex;
            flex-direction: column;
            align-items: center;
            flex: 1;
